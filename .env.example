
# Example environment variables for Secret Santa app (MariaDB/MySQL)
# You can either provide a full DATABASE_URL or individual DB_* fields.
# DATABASE_URL format (mysql): mysql://user:password@host:3306/secret_santa_db
DATABASE_URL=mysql://user:password@host:3306/secret_santa_db

# Or provide individual values:
# DB_HOST=host
# DB_PORT=3306
# DB_USER=user
# DB_PASSWORD=password
# DB_NAME=secret_santa_db

# JWT signing secret (change to a secure value)
JWT_SECRET=replace_this_with_a_strong_secret

# Optional: port the server will listen on
PORT=3000
